//
// CSS Triangle Up
//
triangle-up(width, color)
    size: 0
    border-left: width solid transparent
    border-right: width solid transparent
    border-bottom: width solid color

//
// CSS Triangle Down
//
triangle-down(width, color)
    size: 0
    border-left: width solid transparent
    border-right: width solid transparent
    border-top: width solid color

//
// CSS Triangle Left
//
triangle-left(width, color)
    size: 0
    border-top: width solid transparent
    border-bottom: width solid transparent
    border-left: width solid color

//
// CSS Triangle Right
//
triangle-right(width, color)
    size: 0
    border-top: width solid transparent
    border-bottom: width solid transparent
    border-right:width solid color

//
// Support Triangle line
//
triangle-line(width = 5px, border-first, border-last, border-style, rotate = 45deg)
    border-{border-first}: border-style
    border-{border-last}: border-style
    display: inline-block
    size: width
    transform: rotate(rotate)

//
// CSS Triangle line Up
//
triangle-line-up(width, border, rotate = 45deg)
    triangle-line: width, left, top, border, rotate

//
// CSS Triangle line Down
//
triangle-line-down(width, border, rotate = 45deg)
    triangle-line: width, bottom, right, border, rotate

//
// CSS Triangle line Left
//
triangle-line-left(width, border, rotate = 45deg)
    triangle-line: width, bottom, left, border, rotate

//
// CSS Triangle line Right
//
triangle-line-right(width, border, rotate = 45deg)
    triangle-line: width, top, right, border, rotate